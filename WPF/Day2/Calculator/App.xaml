<Application x:Class="Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="BtnBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DeepPink" Offset=".25"></GradientStop>
            <GradientStop Color="HotPink" Offset=".5"></GradientStop>
            <GradientStop Color="Pink" Offset=".75"></GradientStop>
        </LinearGradientBrush>
        <Style    x:Key="btnstyle" TargetType="Button">
            <Setter Property="Button.Width" Value="50"></Setter>
            <Setter Property="Button.Height" Value="50"></Setter>
            <Setter Property="Button.Content" Value="Click"></Setter>
            <Setter Property="Button.FontFamily" Value="Arial"></Setter>

            <Setter Property="Button.Margin" Value="5"></Setter>
            <Setter Property="Button.FontWeight" Value="Bold"></Setter>
            <Setter Property="Button.Background" Value="{StaticResource ResourceKey=BtnBackground}"></Setter>
            <Setter Property="Button.Foreground" Value="Black"></Setter>

            <Setter Property="Border.CornerRadius" Value="20"></Setter>
            <Setter Property="Border.BorderBrush" Value="Black"></Setter>

        </Style>
    </Application.Resources>
</Application>
