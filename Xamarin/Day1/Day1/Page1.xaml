                    CornerRadius="30"
                    Clicked="selectnum"
                    
                    >
                </Button>
            </HorizontalStackLayout>
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10" Spacing="10">
                <Button 
                    Text="0"
                    WidthRequest="80"
                    HeightRequest="80"
                    Background="gray"
                    CornerRadius="30"
                    Clicked="selectnum"
                    >
                </Button>
                <Button
                    Text="Dial"
                    Background="green"
                    WidthRequest="150"
                    HeightRequest="50"
                    CornerRadius="10"
                    >
                    
                </Button>
                <Button
                    Text="Delete"
                    Background="red"
                    WidthRequest="150"
                    HeightRequest="50"
                    CornerRadius="10"
                    Clicked="clear"
                    >

                </Button>
                <Button
                    Text="Go to Second task"
                    WidthRequest="150"
                    HeightRequest="50"
                    CornerRadius="10"
                   Clicked="NavigateToPage2"
                    >
                </Button>

            </StackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>